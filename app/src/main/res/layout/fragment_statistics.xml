<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Home">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/background_radius"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pie chart"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="center"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <ImageButton
                                android:id="@+id/ibtn_start_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/baseline_calendar_month_24"
                                android:backgroundTint="#00FFFFFF"
                                />
                            <TextView
                                android:id="@+id/txt_start_date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="12/10/2023"
                                android:textSize="24dp"
                                android:gravity="center_vertical"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <ImageButton
                                android:id="@+id/ibtn_end_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/baseline_calendar_month_24"
                                android:backgroundTint="#00FFFFFF"
                                />
                            <TextView
                                android:id="@+id/txt_end_date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="12/10/2023"
                                android:textSize="24dp"
                                android:gravity="center_vertical"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pie_chart"
                android:layout_width="405dp"
                android:layout_height="275dp"
                android:layout_margin="16dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_title"
                tools:layout_editor_absoluteX="0dp"
                tools:ignore="MissingClass,MissingConstraints" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@drawable/background_radius"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Colunm chart"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="center"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <ImageButton
                                android:id="@+id/ibtn_start_month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/baseline_calendar_month_24"
                                android:backgroundTint="#00FFFFFF"
                                />
                            <TextView
                                android:id="@+id/txt_start_month"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="January"
                                android:textSize="24dp"
                                android:gravity="center_vertical"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <ImageButton
                                android:id="@+id/ibtn_end_month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/baseline_calendar_month_24"
                                android:backgroundTint="#00FFFFFF"
                                />
                            <TextView
                                android:id="@+id/txt_end_month"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="November"
                                android:textSize="24dp"
                                android:gravity="center_vertical"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bar_chart"
                android:layout_width="407dp"
                android:layout_height="321dp"
                android:layout_margin="16dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/pie_chart"
                tools:ignore="MissingClass,MissingConstraints" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>